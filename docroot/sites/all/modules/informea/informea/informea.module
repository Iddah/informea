/**
 * Retrieve terms that have field_published = 1.
 */
function informea_get_published_taxonomy_terms($vocabulary) {
  $terms = entity_load('taxonomy_term', FALSE, ['vid' => $vocabulary]);
  usort($terms, function ($a, $b) {
    return strcmp($a->name, $b->name);
  });
  foreach ($terms as $key => $term) {
    if (empty($term->field_published[LANGUAGE_NONE][0]['value'])) {
      unset($terms[$key]);
    }
  }
  return $terms;
}

/**
 * Implements hook_page_build().
 */
function informea_page_build(&$page) {
  // Make sure the current page isn't cacheable if a tour is running.
  $current_name = !empty($_SESSION['tour']) ? $_SESSION['tour'] : NULL;
  if (!empty($_GET['tour']) && ($_GET['tour'] == $current_name || empty($_GET['step']))) {
    $current_name = $_GET['tour'];
  }
  if (!empty($current_name)) {
    drupal_page_is_cacheable(FALSE);
    drupal_add_js(drupal_get_path('module', 'informea') . '/js/informea_tour.js');
  }
}
