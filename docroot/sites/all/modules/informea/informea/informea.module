/**
 * Implements hook_block_view().
 */
function informea_block_view($delta = '') {
  $block = array();

  switch ($delta) {
    case 'informea_front_page_slider':
      $block['content'] = informea_theme_slider();
      break;

    case 'informea_share':
      global $language;
      $content = '';
      $node = menu_get_object();
      if (!empty($node->nid)) {
        $url = url('/node/' . $node->nid, array('absolute' => TRUE));
        $title = field_get_items('node', $node, 'title_field');
        $title = current($title)['value'];
        $site_name = variable_get('site_name', '');
        // Construct the tweet.
        $twitter_text = $title . ' | ' . $site_name;
        $tweet_url = url('https://twitter.com/intent/tweet', array(
          'query' => array(
            'original_referer' => $url,
            'text' => $twitter_text,
//            'url' => shorten_url($url),
            'url' => $url,
          ),
        ));
        $vars = array(
          'url' => $url,
          'tweet_url' => $tweet_url,
          'node' => $node,
          'language' => $language,
        );
        $content = theme('informea_share_widget', $vars);
      }
      $block['content'] = $content;
      break;

    case 'informea_subscribe_updates':
      $block['content'] = drupal_get_form('informea_subscribe_updates_form');
      break;

    case 'informea_treaties_block':
      $block['subject'] = NULL;
      $block['content'] = informea_theme_treaties_menu_block();
      break;

    case 'informea_browse_all_block':
      $block['subject'] = NULL;
      $vocabulary = taxonomy_vocabulary_machine_name_load('mea_topic');
      $topics = informea_get_published_taxonomy_terms($vocabulary->vid);

      foreach ($topics as $topic) {
        $topic_links['topic-' . $topic->tid] = [
          'title' => $topic->name,
          'url' => 'taxonomy/term/' . $topic->tid,
        ];
      }

      $vocabulary = taxonomy_vocabulary_machine_name_load('geographical_region');
      $regions = informea_get_published_taxonomy_terms($vocabulary->vid);
      $global_region_url = '';

      foreach ($regions as $region) {
        if ($region->tid != 1118) {
          $region_links['region-' . $region->tid] = [
            'title' => $region->name,
            'url' => 'taxonomy/term/' . $region->tid,
          ];
        }
        else {
          $global_region_url = 'taxonomy/term/' . $region->tid;
        }
      }

      $block['content'] = theme(
        'informea_browse_all_menu_block',
        array(
          'topics' => $topic_links,
          'regions' => $region_links,
          'global_region_url' => $global_region_url
        )
      );
      break;

    case 'informea_page_title':
      $title = sprintf('<h1>%s</h1>', t('Access information on Multilateral Environmental Agreements'));
      $page = page_manager_get_current_page();
      if (!empty($page['name'])) {
        if ($page['name'] == 'page-topic_page') {
          $title = informea_topics_page_title() ?: $title;
        }
        elseif ($page['name'] == 'page-region_page') {
          $title = geographic_region_page_title() ?: $title;
        }
      }
      $block['content'] = $title;
      break;

    case 'frontpage_topics':
      $vocabulary = taxonomy_vocabulary_machine_name_load('mea_topic');
      $topics = informea_get_published_taxonomy_terms($vocabulary->vid);
      $links = [];
      foreach ($topics as $topic) {
        $title = $topic->name;
        if (!empty($topic->field_image[LANGUAGE_NONE][0])) {
          $image = $topic->field_image[LANGUAGE_NONE][0];
          $hero_image = array(
            'style_name' => 'thumbnail',
            'path' => $image['uri'],
            'width' => '100',
            'height' => '100',
            'alt' => $image['alt'],
            'title' => $image['title'],
          );
          $title = theme('image_style', $hero_image) . $title;
        }
        $links['topic-' . $topic->tid] = [
          'title' => $title,
          'html' => TRUE,
          'href' => 'taxonomy/term/' . $topic->tid,
        ];
      }
      $block['content'] = sprintf('<h2 class="h4 block-title">%s</h2> %s', t('Browse information by Environmental Topic:'), theme('links', ['links' => $links]));

      break;

    case 'frontpage_regions_and_parties':
      $vocabulary = taxonomy_vocabulary_machine_name_load('geographical_region');
      $regions = informea_get_published_taxonomy_terms($vocabulary->vid);
      $region_options = [NULL => t('All regions')];
      foreach ($regions as $region) {
        if ($region->tid != 1118) {
          $region_options[url('/taxonomy/term/' . $region->tid)] = $region->name;
        }
      }

      $country_options = [NULL => t('Select a party')] + country_get_countries_select_options();

      $raw_content['regions'] = [
        '#type' => 'select',
        '#options' => $region_options,
        '#default_value' => NULL,
        '#prefix' => '<div class="frontpage-browse frontpage-browse--regions">' . '<h2 class="h4 block-title">' . t('Browse by Region:') . '</h2>',
        '#suffix' => '</div>',
        '#attributes' => ['onChange' => 'window.location.href=this.value', 'class' => ['use-select-2'], 'id' => 'edit-frontpage-regions'],
      ];
      $raw_content['or'] = [
        '#type' => 'item',
        '#markup' => 'or'
      ];
      $raw_content['countries'] = [
        '#type' => 'select',
        '#options' => $country_options,
        '#default_value' => NULL,
        '#prefix' => '<div class="frontpage-browse frontpage-browse--parties">' . '<h2 class="h4 block-title">' . t('Browse by Party:') . '</h2>',
        '#suffix' => '</div>',
        '#attributes' => ['onChange' => 'window.location.href=this.value', 'class' => ['use-select-2'], 'id' => 'edit-frontpage-parties'],
      ];
      $block['content'] = render($raw_content);
      break;
  }
  return $block;
}

/**
 * Implements hook_block_configure().
 *
 * This hook declares configuration options for blocks provided by this module.
 */
function informea_block_configure($delta = '') {
  $form = array();

  switch ($delta) {
    case 'informea_front_page_slider':
      $form['informea_max_slides_count'] = array(
        '#type' => 'textfield',
        '#title' => t('Maximum number of slides'),
        '#size' => 60,
        '#description' => t('This will limit the maximum number of slides.'),
        '#default_value' => variable_get('informea_max_slides_count', 7),
        '#element_validate' => array('element_validate_integer_positive')
      );

      break;
  }

  return $form;
}

/**
 * Implements hook_block_save().
 *
 * This hook declares how the configured options for a block
 * provided by this module are saved.
 */
function informea_block_save($delta = '', $edit = array()) {
  switch ($delta) {
    case 'informea_front_page_slider':
      variable_set('informea_max_slides_count', $edit['informea_max_slides_count']);

      break;
  }
}

