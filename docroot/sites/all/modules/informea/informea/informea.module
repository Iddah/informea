/**
 * Implements hook_flush_caches().
 *
 * Called from update.php (among others) to flush the caches.
 */
function informea_flush_caches() {
  if (function_exists('memcache_storage_flush_all_cache')) {
    memcache_storage_flush_all_cache();
  }
  if (function_exists('varnish_purge_all_pages')) {
    varnish_purge_all_pages();
  }
  return array();
}

/**
 * Implements hook_views_query_alter().
 */
function informea_views_query_alter(&$view, &$query) {
  global $language;
  if (($view->name == 'treaty_parties') && (@$query->table_queue['node_field_data_field_country'])) {
    $query->table_queue['node_field_data_field_country']['join']->extra[] = ['field' => 'language', 'value' => $language->language];
  }
  if (($view->name == 'treaty_parties') && (@$query->table_queue['node_field_data_field_country__field_data_title_field'])) {
    $query->table_queue['node_field_data_field_country__field_data_title_field']['join']->extra[] = ['field' => 'language', 'value' => $language->language];
  }
}

/**
 * Get enabled treaty used in member parties
 */
function informea_get_treaty_options_in_use($form) {
  $options = [];
  $query = db_select('field_data_field_treaty', 'dt')
    ->distinct()
    ->fields('dt', array('field_treaty_target_id'))->distinct();

  $query->condition('dt.bundle', 'member_party');
  $query->join('node', 't', 't.nid = dt.entity_id');
  $query->condition('t.status', 1);
  $query->join('node', 'p', 'p.nid = dt.field_treaty_target_id');
  $query->condition('p.status', 1);
  $result = $query->execute()->fetchCol();
  foreach($form['treaty']['#options'] as $tid => $option) {
    if (!in_array($tid, $result)) {
      if ($tid != 'All') {
        continue;
      }
    }
    $options[$tid] = $option;
  }
  return $options;
}

function informea_form_survey_start_handler(&$form, &$form_state) {
  foreach($form_state['values']['submitted'] as $value) {
    if (strpos($value, 'tid_') === 0) {
      $term = taxonomy_term_load(str_replace('tid_','',$value));
      $ew = entity_metadata_wrapper('taxonomy_term', $term);
      $redirect = $ew->field_redirect_url->value();
      if (!empty($redirect['url'])) {
        $form_state['redirect'] = $redirect['url'];
      }
    }
  }
}

/**
 * Implements hook_form_alter().
 */
function informea_form_alter(&$form, $form_state, $form_id) {
  if ($form_id == ('webform_client_form_' . variable_get('survey_start_webform_id'))) {
    $form['#submit'][] = 'informea_form_survey_start_handler';
  }
  if ($form_id == ('webform_client_form_' . variable_get('survey_feedback_webform_id'))) {
    if (!empty($form['submitted']['test_date']) && !empty($form['submitted']['test_time'])) {
      $form['submitted']['date_and_time'] = [
        '#type' => 'container',
        'test_date' => $form['submitted']['test_date'],
        'test_time' => $form['submitted']['test_time'],
        '#weight' => $form['submitted']['test_time']['#weight'],
      ];
      unset($form['submitted']['test_date']);
      unset($form['submitted']['test_time']);
    }
  }

  if ($form_id == 'views_exposed_form' && $form_state['view']->name == 'treaty_parties') {
    $form['treaty']['#options'] = informea_get_treaty_options_in_use($form);
  }

  if ($form_id == 'views_exposed_form' && $form_state['view']->name == 'the_content') {
    $form['field_treaty_target_id'] = array(
      '#type' => 'entityreference',
      '#default_value'=>[],
      '#era_entity_type' => 'node',
      '#era_bundles' => array('treaty'),
      '#era_cardinality' => 3,
      '#era_query_settings' => array(
        'limit' => 15,
      ),
    );
  };
  if (strpos($form_id, 'facetapi_select_facet_form_') === 0) {
    $form['facets']['#attributes']['class'][] = 'informea-select-2';
  }
}

/**
 * Implements hook_schema_alter()
 */
function informea_schema_alter(&$schema) {
  $table = 'field_data_title_field';
  $column = 'title_field_value';

  $new_spec = array(
    'type' => 'varchar', 'length' => 2048, 'not null' => TRUE, 'default' => '',
  );
  if (isset($schema[$table])) {
    $schema[$table]['fields'][$column] = $new_spec;
  }
  $table = 'field_revision_title_field';
  if (isset($schema[$table])) {
    $schema[$table]['fields'][$column] = $new_spec;
  }

  $table = 'node';
  $column = 'title';
  if (isset($schema[$table])) {
    $schema[$table]['fields'][$column] = $new_spec;
  }
  $table = 'node_revision';
  if (isset($schema[$table])) {
    $schema[$table]['fields'][$column] = $new_spec;
  }
}

