/**
 * Implements hook_field_formatter_view().
 */
function informea_field_formatter_view($entity_type, $entity, $field, $instance, $lang_code, $items, $display) {
  global $language;
  $elements = array();
  switch ($display['type']) {
    case 'external_url':
      foreach ($items as $delta => $item) {
        $elements[$delta] = array(
          '#markup' => theme('informea_field_formatter_external_url', array('element' => $item)),
        );
      }
      break;

    case 'informea_file_dropdown':
      if (!empty($items)) {
        $elements[0] = array(
          '#markup' => theme('informea_file_dropdown', array('items' => $items)),
        );
      }
      break;

    case 'informea_pdf_js':
      if (!empty($items)) {
        $elements[0] = array(
          '#markup' => theme('informea_pdf_js', array('files' => $items)),
        );
      }
      break;
    case 'informea_date':
      if (!empty($items)) {
        $elements[0] = array(
          '#markup' =>  theme('informea_date', array('items' => $items)),
        );
      }
      break;
    case 'informea_linked_file_name':
      foreach ($items as $delta => $item) {
        $elements[$delta] = array(
          '#markup' => theme('informea_linked_file_name', array('file' => (object) $item)),
        );
      }
    break;

    case 'informea_title_linked':
      $settings = $display['settings'];
      $output = '';
      if (isset($items[0]['safe_value'])) {
        $output = $items[0]['safe_value'];
      }
      elseif (isset($items[0]['value'])) {
        $output = _text_sanitize($instance, $lang_code, $items[0], 'value');
      }

      $extensions = [];
      if (isset($settings['title_extensions_field'])) {
        $title_extensions_fields = explode(',', $settings['title_extensions_field']);
        foreach ($title_extensions_fields as $title_extensions_field){
          $extensions_field = str_replace(' ', '', $title_extensions_field);
          if (!empty($extensions_field)) {
            if (isset($entity->{$extensions_field})) {
              foreach ($entity->{$extensions_field} as $k=>$v){
                if (is_array($v)) {
                  foreach ($v as $file) {
                    $path_parts = pathinfo($file['filename']);
                    $extensions[strtoupper($path_parts['extension'])] = strtoupper($path_parts['extension']);
                  }
                }
              }
            }

          }
        }
      }

      if ($extensions) {
        $output = sprintf('<sup>[%s]</sup>%s', implode(',', $extensions) , $output);
      }


      $elements = array();

      if (!empty($output)) {
        if ($settings['title_link'] == 'content') {
          $uri = entity_uri($entity_type, $entity);
          $options = array('html' => TRUE);
          if (!empty($uri['options'])) {
            $options = array_merge($options, $uri['options']);
          }
          $output = l($output, $uri['path'], $options);
        }

        $wrap_tag = empty($settings['title_style']) ? '_none' : $settings['title_style'];

        if ($wrap_tag != '_none') {
          $variables = array(
            'element' => array(
              '#tag' => $wrap_tag,
              '#value' => $output,
            ),
          );

          if (!empty($settings['title_class'])) {
            $variables['element']['#attributes'] = array('class' => $settings['title_class']);
          }

          $output = theme('html_tag', $variables);
        }

        $elements = array(
          array(
            '#markup' => $output,
          ),
        );
      }
      break;

  }
  return $elements;
}

