function wp_migration_get_country_id_from_name($name) {
  $name = strtolower($name);
  $countries = &drupal_static(__FUNCTION__);
  static $equivalents = array();
  if(empty($countries)) {
    $query = new EntityFieldQuery();
    $result = $query->entityCondition('entity_type', 'node')
      ->entityCondition('bundle', 'country')
      ->execute();
    if (isset($result['node'])) {
      $rows = node_load_multiple(array_keys($result['node']));
      foreach ($rows as $row) {
        $countries[strtolower($row->title)] = $row->nid;
      }
    }
    $equivalents = array(
      'anguilla (uk)'                       => 'anguilla',
      'bolivia (plurinational state of)'    => 'bolivia',
      'korea, republic of'                  => 'south korea',
      'micronesia, fed. states'             => 'micronesia',
      'moldova, republic of'                => 'moldova',
      'tanzania, un. rep. of'               => 'tanzania',
      'europa island (france)'              => 'france',
      'united states of america'            => 'united states',
      'Russian Federation'                  => 'russia',
      'Iran, Islamic Republic of'           => 'iran',
      'Macedonia, FYR'                      => 'macedonia',
      'Libyan Arab Jamahiriya'              => 'libya',
      'Gambia'                              => 'gambia, the',
      'Palestinian Authority'               => 'palestinian territory, occupied',
      'Syrian Arab Republic'                => 'syria',
