name = InforMEA
project = informea_theme
description = The InforMEA front-end theme.
core = 7.x
base theme = bootstrap
package = InforMEA

; Regions

regions[above_nav]                = 'Above navbar'
regions[navigation]               = 'Navigation'
regions[front_page_announcements] = 'Front page announcements'
regions[front_page_hero]          = 'Front page hero unit'
regions[front_page_content]       = 'Front page content'
regions[header]                   = 'Top Bar'
regions[highlighted]              = 'Highlighted'
regions[help]                     = 'Help'
regions[content]                  = 'Content'
regions[sidebar_first]            = 'Primary'
regions[sidebar_second]           = 'Secondary'
regions[involvement]              = 'Involvement'
regions[footer]                   = 'Footer'
regions[page_top]                 = 'Page top'
regions[page_bottom]              = 'Page bottom'


; Stylesheets

stylesheets[all][] = 'bootstrap/css/bootstrap.min.css'
stylesheets[all][] = '../bootstrap/css/overrides.css'
stylesheets[all][] = 'css/style.css'
stylesheets[all][] = 'css/style-from-less.css'


; Scripts

scripts[] = 'bootstrap/js/bootstrap.min.js'
scripts[] = 'js/common.js'


; Settings

settings[bootstrap_anchors_fix] = ''
settings[bootstrap_breadcrumb_home] = 1
settings[bootstrap_cdn] = ''
settings[bootstrap_navbar_position] = 'static-top'
settings[bootstrap_breadcrumb_title] = 0
